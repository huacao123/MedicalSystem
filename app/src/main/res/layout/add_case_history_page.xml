<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/mainPage_top_height"
            android:background="@color/mainPage_top_color">

            <TextView
                android:id="@+id/filePage_topName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/case_history_add"
                android:textColor="@color/mainPage_searchBox_color"
                android:textSize="@dimen/mainPage_top_textSize"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="确定"
                android:textColor="@color/mainPage_searchBox_color"
                android:textSize="@dimen/mainPage_search_textSize"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/filePage_editButton_distance" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:textColor="@color/mainPage_searchBox_color"
                android:textSize="@dimen/mainPage_search_textSize"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/filePage_editButton_distance" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/registerPage_topHeight"
            android:layout_marginTop="@dimen/registerPage_toTop"
            android:background="@color/registerPage_barBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/registerPage_toLeft"
                android:text="@string/case_history_title"
                android:textColor="@color/registerPage_editTextColor"
                android:textSize="@dimen/registerPage_editTextSize" />

            <EditText
                android:id="@+id/et_cease_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/registerPage_toLeft"
                android:background="@null"
                android:hint="@string/case_history_title_hint"
                android:imeOptions="actionNext"
                android:maxLength="@integer/registerPage_userNameMaxLength"
                android:singleLine="true"
                android:textColor="@color/registerPage_editTextColor"
                android:textColorHint="@color/registerPage_editTextHintColor"
                android:textSize="@dimen/registerPage_editTextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/registerPage_topHeight"
            android:layout_marginTop="@dimen/registerPage_toTop"
            android:background="@color/registerPage_barBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/registerPage_toLeft"
                android:text="@string/case_history_upload"
                android:textColor="@color/registerPage_editTextColor"
                android:textSize="@dimen/registerPage_editTextSize" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_case_history_upload"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@mipmap/logo_chart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/registerPage_toTop"
            android:background="@color/registerPage_barBackground"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/registerPage_toLeft"
                android:text="@string/sickness_describe"
                android:textColor="@color/registerPage_editTextColor"
                android:textSize="@dimen/registerPage_editTextSize" />

            <EditText
                android:id="@+id/et_sickness_describe"
                android:layout_width="207dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/registerPage_toLeft"
                android:background="@drawable/bg_border"
                android:gravity="top"
                android:hint="@string/sickness_describe_hint"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:maxLength="@integer/registerPage_userNameMaxLength"
                android:minLines="5"
                android:textColor="@color/registerPage_editTextColor"
                android:textColorHint="@color/registerPage_editTextHintColor"
                android:textSize="@dimen/registerPage_editTextSize" />
        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>